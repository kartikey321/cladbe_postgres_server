# ------------- Postgres (used by @cladbe/postgres_manager) -------------
PGHOST=postgres
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=postgres
PGPORT=5432

# ------------- HTTP Server (packages/server) -------------
PORT=7500
NODE_ENV=production

# ------------- WebSocket Gateway (packages/cladbe-ws-gateway) -------------
WS_PORT=7000
KAFKA_BROKERS=kafka:9092
KAFKA_GROUP=cladbe-ws-gateway
KAFKA_TOPICS=server.cdc.filtered
# Optional if you use Redis/KeyDB in gateway:
KEYDB_URL=redis://redis:6379

# ------------- Postgres RPC Worker (packages/postgres_rpc) -------------
SQL_RPC_REQUEST_TOPIC=sql.rpc.requests
SQL_RPC_RESPONSE_TOPIC=sql.rpc.responses
SQL_RPC_GROUP_ID=cladbe-postgres-rpc